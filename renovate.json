{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>dfds/renovate-config"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "pin",
        "digest",
        "patch",
        "lockFileMaintenance"
      ],
      "ignoreDeps": [
        "required_version"
      ],
      "addLabels": [
        "release:patch"
      ],
      "stabilityDays": 1,
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "addLabels": [
        "release:minor"
      ],
      "ignoreDeps": [
        "required_version"
      ],
      "stabilityDays": 7,
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "ignoreDeps": [
        "required_version"
      ],
      "addLabels": [
        "release:major"
      ],
      "stabilityDays": 14,
      "automerge": false
    }
  ]
}
